{
  "manifest_version": 2,
  "name": "ChatGPT MathML / LaTeX Copy",
  "version": "2.7",
  "description": "Copy MathML and LaTeX from math elements",
  "web_accessible_resources": [
    "svg/*.svg",
    "css/*.css"
  ],
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "*://*.wikipedia.org/*"],
      "js": ["content.js"]
    }
  ]
}